{
    "builders": [{
        "type"             : "virtualbox-iso",
        "headless"         : false,
        "vm_name"          : "centos68_java8_dev",
        "output_directory" : "build",
        "guest_os_type"    : "RedHat_64",
        "disk_size"        : 40960,
        "ssh_wait_timeout" : "120m",

        "iso_url"           : "http://mirrors.yun-idc.com/centos/6.8/isos/x86_64/CentOS-6.8-x86_64-bin-DVD1.iso",
        "iso_checksum"      : "afab3a588cda94cd768826e77ad4db2b5ee7c485",
        "iso_checksum_type" : "sha1",

        "boot_command": [
            "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.8-x86_64/ks.cfg<enter><wait>"
        ],
        "boot_wait": "4s",

        "http_directory"       : "unattended",
        "guest_additions_path" : "VBoxGuestAdditions_{{.Version}}.iso",

        "ssh_username"     : "devel",
        "ssh_password"     : "devel",
        "ssh_port"         : 22,
        "shutdown_command" : "sudo /sbin/halt -h -p",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "512"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"]
        ]
    }],
    "post-processors": [{
        "type"                 : "vagrant",
        "include"              : ["vagrant/private.key"],
        "vagrantfile_template" : "vagrant/Vagrantfile",
        "output"               : "centos68_java8_dev.box"
    }],
    "provisioners": [{
        "type"        : "file",
        "source"      : "unattended/pre-requisite/jdk-8u74-linux-x64.rpm",
        "destination" : "/tmp/jdk-linux-x64.rpm"
        },{
        "type"        : "file",
        "source"      : "unattended/pre-requisite/gradle-2.11-bin.zip",
        "destination" : "/tmp/gradle-2.11-bin.zip"
        },{
        "type"        : "file",
        "source"      : "unattended/pre-requisite/apache-maven-3.3.3-bin.tar.gz",
        "destination" : "/tmp/apache-maven-3.3.3-bin.tar.gz"
        },{
        "type"        : "file",
        "source"      : "vagrant/private.key",
        "destination" : "/tmp/id_rsa"
        },{
        "type"            : "shell",
        "execute_command" : "{{ .Vars }} sudo -E sh '{{ .Path }}'",
        "scripts"         : [
            "provisioning/ssh.sh",
            "provisioning/java.sh",
            "provisioning/vboxguest.sh",
            "provisioning/compact.sh"
        ]
    }]
}
