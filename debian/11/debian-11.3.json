{
    "builders": [{
        "type"             : "virtualbox-iso",
        "headless"         : false,
        "vm_name"          : "debian11.3-min",
        "output_directory" : "build",
        "guest_os_type"    : "Debian_64",
        "disk_size"        : 40960,
        "ssh_wait_timeout" : "120m",
        "hard_drive_nonrotational" : true,
        "hard_drive_interface" : "sata",
        "sata_port_count" : 30,
        "hard_drive_discard" : true,
        "iso_url"           : "https://cdimage.debian.org/debian-cd/current/amd64/iso-dvd/debian-11.3.0-amd64-DVD-1.iso",
        "iso_checksum"      : "sha256:fab0b6d2ea4fa4fb14100225fcb2988b94a8e391f273b4bfaed6314dff124a42",

        "boot_command": [
            "<esc><wait>",
            "auto ",
            "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-11.2/preseed.cfg ",
            "net.ifnames=0  ",
            "<enter>"
        ],
        "boot_wait": "10s",

        "http_directory"       : "unattended",
        "guest_additions_path" : "VBoxGuestAdditions_{{.Version}}.iso",

        "ssh_username"     : "devel",
        "ssh_password"     : "devel",
        "ssh_port"         : 22,
        "shutdown_command" : "sudo /sbin/halt -h -p",
        "post_shutdown_delay" : "120s",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "1024"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"]
        ]
    }],
    "post-processors": [{
        "type"                 : "vagrant",
        "include"              : ["vagrant/private.key"],
        "vagrantfile_template" : "vagrant/Vagrantfile",
        "output"               : "debian11.3-min.box"
    }],
    "provisioners": [{
        "type"            : "shell",
        "execute_command" : "{{ .Vars }} sudo -E sh '{{ .Path }}'",
        "scripts"         : [
            "provisioning/vboxguest.sh",
            "10/provisioning/acct.sh",
            "provisioning/compact.sh"
        ]
    }]
}
