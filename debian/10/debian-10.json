{
    "builders": [{
        "type"             : "virtualbox-iso",
        "headless"         : false,
        "vm_name"          : "debian10-min",
        "output_directory" : "build",
        "guest_os_type"    : "Debian_64",
        "disk_size"        : 40960,
        "ssh_wait_timeout" : "120m",
        "hard_drive_nonrotational" : true,
        "hard_drive_discard" : true,

        "iso_url"           : "https://mirrors.ustc.edu.cn/debian-cd/10.0.0/amd64/iso-dvd/debian-10.0.0-amd64-DVD-1.iso",
        "iso_checksum"      : "c2be7957de1410d871fde565545833e6630c7837",
        "iso_checksum_type" : "sha1",

        "boot_command": [
            "<esc><wait>",
            "auto ",
            "net.ifnames=0  ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-10/preseed.cfg ",
            "<enter>"
        ],
        "boot_wait": "4s",

        "http_directory"       : "unattended",
        "guest_additions_path" : "VBoxGuestAdditions_{{.Version}}.iso",

        "ssh_username"     : "devel",
        "ssh_password"     : "devel",
        "ssh_port"         : 22,
        "shutdown_command" : "sudo /sbin/halt -h -p",
        "post_shutdown_delay" : "120s",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "1024"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"]
        ]
    }],
    "post-processors": [{
        "type"                 : "vagrant",
        "include"              : ["vagrant/private.key"],
        "vagrantfile_template" : "vagrant/Vagrantfile",
        "output"               : "debian10-min.box"
    }],
    "provisioners": [{
        "type"            : "shell",
        "execute_command" : "{{ .Vars }} sudo -E sh '{{ .Path }}'",
        "scripts"         : [
            "provisioning/vboxguest.sh",
            "10/provisioning/acct.sh",
            "provisioning/compact.sh"
        ]
    }]
}
